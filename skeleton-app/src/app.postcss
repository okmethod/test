@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

html,
body {
  @apply h-full overflow-hidden;
}

.cRouteBodyStyle {
  @apply container flex flex-col md:w-11/12 space-y-4;
}

.cTitlePartStyle {
  @apply container mb-2 ml-2;
}

.cTitleStyle {
  @apply text-2xl font-bold;
}

.cContentPartStyle {
  @apply container space-y-4;
}

.cInputFormAndMessagePartStyle {
  @apply flex items-center space-x-3;
}

.cLinkButtonStyle {
  @apply flex items-center h-full px-4 text-lg text-blue-500 hover:underline font-bold;
}

.cIconButtonStyle {
  @apply flex items-center h-full px-2 py-1 text-white rounded bg-blue-500 hover:bg-blue-600;
}

.cIconDivStyle {
  @apply w-5 h-5 flex-shrink-0;
}

.cIconStyle {
  @apply w-full h-full;
}
